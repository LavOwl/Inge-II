@page "/"
@rendermode InteractiveServer
@inject NavigationManager Navegador
@inject shipPostListUseCase shipPostListUseCase
@inject vehiclePostListUseCase vehiclePostListUseCase
@inject listShipImagesUseCase listShipImagesUseCase
@inject listVehicleImagesUseCase listVehicleImagesUseCase

@foreach (var p in posts){
    @if(p.getType()){
        <img src="@string.Format("data:image/jpeg;base64,{0}", Convert.ToBase64String(listShipImagesUseCase.Execute().Where(s => s.ShipId == p.getId()).ElementAt(0).Image))" width="100" height="100"/>
    }
    @if(!p.getType()){
    <img src="@string.Format("data:image/jpeg;base64,{0}", Convert.ToBase64String(listVehicleImagesUseCase.Execute().Where(s => s.VehicleId == p.getId()).ElementAt(0).Image))" width="100" height="100"/>
    }
    <p>@p.getTitle()</p> <br>
}

@code {
    
    List<Post> posts = new List<Post>();

    protected override void OnInitialized() {
       posts.AddRange(shipPostListUseCase.Execute());
       posts.AddRange(vehiclePostListUseCase.Execute());
       posts = posts.OrderBy(_ => Guid.NewGuid()).ToList();
   }
}
